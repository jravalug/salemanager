# Ambiente
FLASK_ENV=development
# Opciones: development, staging, production, testing

# Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Seguridad - CAMBIAR EN PRODUCCIÓN
SECRET_KEY=your-super-secret-key-change-in-production

# Base de datos
# Para desarrollo: sqlite:///instance/dev.db (automático)
# Para producción: postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Redis (para caché y Celery)
REDIS_URL=redis://localhost:6379/0

# Celery - Message Broker y Result Backend
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
